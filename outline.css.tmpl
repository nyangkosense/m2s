body {
    font-family: "Inter", "Helvetica Neue", Arial, sans-serif;
    margin: 2rem auto;
    max-width: 70rem;
    line-height: 1.65;
    color: #111315;
    font-size: 18px;
}

h1 {
    font-size: 1.8rem;
    border-bottom: 1px solid #cbd5e1;
    padding-bottom: 0.75rem;
}

.slide {
    margin: 2rem 0;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e2e8f0;
}

.slide > h1 {
    font-size: 1.4rem;
    margin-bottom: 0.75rem;
}
